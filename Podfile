    pod 'CTFeedback'
    pod 'GPUImage'
    pod 'PebbleKit'
    pod 'pop'
    pod 'TTCounterLabel'
    pod 'CocoaAsyncSocket'
    pod 'RPCircularProgress'
end

target 'TriggertrapSLR' do
    common_pods
    pod 'Crashlytics'
    pod 'Fabric'
    pod 'Shimmer'
end
